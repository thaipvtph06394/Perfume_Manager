<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ui.CreateUserActivity">

        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbarProduct"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_below="@+id/toolbarProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_menu_camera"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:drawableLeft="@drawable/ic_email_white_24dp"
                    android:drawablePadding="10dp"
                    android:id="@+id/edTendangNhap_themNguoidung"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên Đăng Nhập" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
                    android:drawablePadding="10dp"
                    android:id="@+id/edMatKhau_themNguoidung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật Khẩu" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:drawableLeft="@drawable/ic_vpn_key_white_24dp"
                    android:drawablePadding="10dp"
                    android:id="@+id/edMatKhau2_themNguoidung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nhắc Lại Mật Khẩu" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:drawablePadding="10dp"
                    android:id="@+id/edSDT_themNguoidung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số Điện Thoại" />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_marginBottom="3dp"
                    android:id="@+id/btnThem_ThemNguoiDung"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login"
                    android:text="Thêm"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:onClick="onAdd"/>

                <Button
                    android:layout_marginBottom="3dp"
                    android:id="@+id/btnHuy_ThemNguoiDung"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:onClick="onCannel"
                    android:background="@drawable/btn_red"
                    android:text="Hủy"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="30dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/tvSignIn"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/login_sign_in"
                    android:onClick="onSignIn"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>